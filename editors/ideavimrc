" <C-S-O> to reload ideavimrc in IDE
" Options ------
set ignorecase
set smartcase

set scrolloff=3

" Integrate with system clipboard
set clipboard=unnamedplus,unnamed

" Plugins -----
set commentary
set surround

" Mappings -----
let mapleader=","

nmap U <C-r>
map J }
map K {

nmap <leader>s :action SaveAll<CR>

nmap <C-h> <c-w>h
nmap <C-l> <c-w>l
nmap <C-k> <c-w>k
nmap <C-j> <c-w>j
nmap H :action PreviousTab<CR>
nmap L :action NextTab<CR>

nmap <leader>t :action ActivateTerminalToolWindow<CR>
nmap <leader>f :action GotoFile<CR>
nmap <leader>g :action FindInPath<CR>

nmap <leader>v :action SplitVertically<CR>
nmap <leader>h :action SplitHorizontally<CR>
nmap <leader>q :action CloseContent<CR>
nmap <leader>x :action CloseContent<CR>

nmap gt :action GotoTest<CR>
nmap gi :action GotoImplementation<CR>
nmap gd :action GotoDeclaration<CR>
nmap <leader>b :action Back<CR>
nmap <leader>n :action Forward<CR>

nmap <leader>r :action RenameElement<CR>
nmap <leader>cc :action RunAnything<CR>
nmap <leader>cr :action Rerun<CR>
nmap <leader>ce :action RerunFailedTests<CR>
