# Aliases
# source zshenv
alias zshenv="source /etc/zsh/zshenv"

# Very common
alias l="ls -v --group-directories-first"
alias ll="ls -lhaFv --color=auto --group-directories-first"
alias cl="clear"
alias cls="clear;l"
alias du="du -sh * | sort -h"

alias s="sudo"
alias v="vim"
alias g="git"
alias vw="vim +VimwikiIndex"

alias gs="git status"
alias gl="git log"
alias ga="git add ."
alias gc="git commit"
alias gp="git pull"
alias gpush="git push origin master"

# Open program with specific parameters
alias py="python3.5"
alias gpp="g++ -std=c++11 -Wall -Wconversion -Wextra -pedantic"
alias composer="/usr/local/bin/composer.phar"
alias laravel="~/.config/composer/vendor/bin/laravel"
alias heigvpn="sudo openconnect --authgroup=All_Users --user=luc.wachter --no-cert-check https://remote.heig-vd.ch"

alias fanmin="clevo-indicator 40"
alias fanlow="clevo-indicator 45"
alias fanmiddle="clevo-indicator 50"
alias fanhigh="clevo-indicator 55"

alias mp3-dl="youtube-dl --audio-quality 1 --extract-audio --audio-format mp3"
alias meteo="curl wttr.in"
alias battery='upower -i /org/freedesktop/UPower/devices/battery_BAT0| grep -E "state|to\ full|percentage"'

# Moving around
alias cdev="cd ~/Dev/"
alias cdot="cd ~/Dev/dotfiles/"
alias cdoc="cd ~/Documents/"
alias cnotes="cd ~/Notebooks/"
alias clatex="cd ~/Notebooks/Latex/"
alias cheig="cd ~/HEIG/"
alias cwww="cd ~/Shortcuts/web/www/"
alias cshort="cd ~/Shortcuts/"
alias csnip="cd ~/Dev/dotfiles/vim/snippets"

alias ,q="exit"
alias help="man"

# Configuration
alias vconf="vim ~/Dev/dotfiles/vim/vimrc"
alias uconf="vim ~/Dev/dotfiles/urxvt/urxvt.rc"
alias zconf="vim ~/Dev/dotfiles/zsh/zshrc"
alias zaconf="vim ~/Dev/dotfiles/zsh/aliases"
alias zfconf="vim ~/Dev/dotfiles/zsh/functions"
alias zeconf="sudo vim /etc/zsh/zshenv"
alias bconf="vim ~/Dev/dotfiles/zsh/bashrc"
alias tconf="vim ~/Dev/dotfiles/tmux/tmux.conf"

# Package commands
alias dp="dpkg -l | grep "
alias aptl="apt list --upgradable"
alias apts="apt search"
alias aptupd="sudo apt update"
alias aptupg="sudo apt upgrade"
alias apti="sudo apt install"

# Tmux
alias tm="tmux attach -t Dev || tmux new -s Dev"
alias tl="tmux ls"
alias tn="tmux new -s "
alias tk="tmux kill-session -t "
